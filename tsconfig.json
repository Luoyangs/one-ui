{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "allowJs": true,
    "noImplicitAny": false,
    "inlineSourceMap": false,
    "importHelpers": true,
    "preserveSymlinks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "one-ui/*": [
        "packages/*"
      ],
      "@svg/*": [
        "packages/icon/svg/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "config",
    "lib",
    "*.config.js",
    "**/icon/update.js",
    "**/icon/svg/index.js"
  ],
  "include": [
    "./src/",
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "node_modules/vue-tsx-support/options/allow-unknown-props.d.ts",
  ]
}
